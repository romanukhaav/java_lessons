package Lesson1;

//Введите три числа и выведите на экран значение суммы и произведения этих чисел.

import java.util.Scanner;

public class ThreeNums {
	private static Scanner num1;
	public static void main(String[] args){
			num1 = new Scanner(System.in);
		    int i = 0;
		    System.out.print("Введите целое число: ");
		    if(num1.hasNextInt()) { // возвращает истинну если с потока ввода можно считать целое число
		      i = num1.nextInt(); // считывает целое число с потока ввода и сохраняем в переменную
		      System.out.println(i);
		    } else {
		      System.out.println("Вы ввели не целое число");
		    }
		    
		    int j = 0;
		    System.out.print("Введите второе целое число: ");
		    if(num1.hasNextInt()) { // возвращает истинну если с потока ввода можно считать целое число
		      j = num1.nextInt(); // считывает целое число с потока ввода и сохраняем в переменную
		      System.out.println(j);
		    } else {
		      System.out.println("Вы ввели не целое число");
		    }
		    
		    int k = 0;
		    System.out.print("Введите третье целое число: ");
		    if(num1.hasNextInt()) { // возвращает истинну если с потока ввода можно считать целое число
		      k = num1.nextInt(); // считывает целое число с потока ввода и сохраняем в переменную
		      System.out.println(k);
		    } else {
		      System.out.println("Вы ввели не целое число");
		    }
	
		    System.out.print("Сумма трех чисел = "+(i+j+k)+"\n");
		    System.out.print("Производное трех чисел = "+(i*j*k));
		}
}
