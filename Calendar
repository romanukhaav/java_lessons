package lesson5;

//При помощи цикла показать на экран календарь текущего месяца.
import java.text.SimpleDateFormat;
import java.util.Date;

public class Calendar {
	public static void main (String[] args){ 
		System.out.println("Поточна дата" );
		System.out.println(new Date(System.currentTimeMillis()));
		System.out.println(new Date(System.currentTimeMillis()+1000*60*60*24*1));
		System.out.println();
		
	
		Date currentDate = new Date();
        SimpleDateFormat dateFormat = null;
              
        dateFormat = new SimpleDateFormat("dd MMMM");
        System.out.println("Constructor 2: " + dateFormat.format( currentDate ) );
        
        
        dateFormat = new SimpleDateFormat("d");
        if (Integer.parseInt(dateFormat.format( currentDate ))==1){
        	System.out.println("Ok");
        	}
        else{System.out.println("Bad!!!");
        };
        System.out.println("Constructor 5: " + dateFormat.format( currentDate ) );
        
    }
}
